{
  "name": "bodega-de-belen",
  "version": "1.0.0",
  "description": "Sistema de Ventas - Bodega de Belén",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.bodegadebelen.app",
    "productName": "Bodega de Belén",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!**/*.pyc",
      "!**/__pycache__"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
